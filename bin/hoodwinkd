#!/usr/bin/env ruby
$: << File.expand_path("../../lib", __FILE__)
require 'rubygems'
require 'hoodwinkd'

# extensions to the core
require 'hoodwinkd/dial'
require 'hoodwinkd/onslaught'
require 'hoodwinkd/summaries'

Hoodwinkd.connect File.expand_path('../../config/database.yml', __FILE__)
Hoodwinkd.create
Hoodwinkd.serve
